@{
  Layout = "_Layout";
}

@model Registrar.Models.Student

<h2>Edit</h2>

<h4>Edit this Student Profile: @Html.DisplayFor(model => model.StudentName)</h4>

@using (Html.BeginForm())
{
  @Html.HiddenFor(model => model.StudentId)

  @Html.LabelFor(model => model.StudentName)
  @Html.EditorFor(model => model.StudentName)

  @Html.LabelFor(model => model.DateOfEnrollment)
  @Html.EditorFor(model => model.DateOfEnrollment)

  <input type="submit" value="Save" />
}

<p>@Html.ActionLink("Back to list of Students", "Index")</p>